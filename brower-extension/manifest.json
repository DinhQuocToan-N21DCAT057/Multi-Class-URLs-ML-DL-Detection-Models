{
  "manifest_version": 3,
  "name": "URL Guard",
  "version": "1.3",
  "description": "Multi-Class URL detection using multiple ML model",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icons8-shield-48.png",
      "128": "icons/icons8-shield-48.png"
    }
  },
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icons8-shield-48.png"
  }
}